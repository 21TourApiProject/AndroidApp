<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myPage.CustomerSCActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="22dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/csBack"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginRight="21dp">

                    <Button
                        android:layout_width="16sp"
                        android:layout_height="16sp"
                        android:background="@drawable/mypost_back"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/scdream_light"
                    android:text="문의하기"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="189dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                app:srcCompat="@drawable/cspage_cute" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:fontFamily="@font/scdream"
                android:text="불편하신 점이나 건의할 사항을 알려주시면" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:textSize="12sp"
                android:fontFamily="@font/scdream"
                android:text="서비스를 개선하는데에 큰 도움이 됩니다." />

<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="55dp"-->
<!--                android:layout_marginBottom="40dp"-->
<!--                app:srcCompat="@drawable/cspage_text" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="41dp"
                android:fontFamily="@font/scdream"
                android:text="이메일 : starsufers@gmail.com"
                android:textSize="15sp" />

            <Button
                android:id="@+id/sendEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="이메일 보내기"
                android:fontFamily="@font/scdream"
                android:background="@drawable/round_btn" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>