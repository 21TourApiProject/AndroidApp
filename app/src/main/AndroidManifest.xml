<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.starrynight.tourapiproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourapiProject"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <activity android:name=".PersonPage.PersonpopActivity" android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity android:name=".signUpPage.PhoneAuthActivity"/>
        <activity android:name=".signUpPage.GeneralSingUpActivity" />
        <activity android:name=".signUpPage.SelectHashTagActivity" />
        <activity android:name=".signUpPage.SignUpActivity" />
        <activity android:name=".StarPage.StarActivity" />
        <activity android:name=".ObservationsiteActivity" />
        <activity android:name=".TouristspotPage.TouristreviewActivity" />
        <activity android:name=".TouristspotPage.MoretouristspotActivity" />
        <activity android:name=".weatherPage.WeatherActivity" />
        <activity android:name=".PersonPage.ProfileActivity" />
        <activity android:name=".TouristspotPage.Touristspot_Activity" />
        <activity android:name=".postPage.PostActivity" />
        <activity android:name=".postWritePage.PostWriteActivity" />
        <activity android:name=".postWritePage.SearchObservingPointActivity" />
        <activity android:name=".postWritePage.AddHashTagActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <!--Redirect URI: "kakao{NATIVE_APP_KEY}://oauth"-->
                <data
                    android:host="oauth"
                    android:scheme="{@string/kakao_app_key}"/>
            </intent-filter>
        </activity>
    </application>



</manifest>