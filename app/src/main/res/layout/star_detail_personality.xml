<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wt__card_view_round"
    android:backgroundTint="@color/teal_200"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wt__card_view_top"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/const_per_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="별자리"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/title_per_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="의 성격"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/period_per_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07.22~08.15"
            android:layout_marginStart="15dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/content_per_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/constellation_content_example" />
</LinearLayout>
