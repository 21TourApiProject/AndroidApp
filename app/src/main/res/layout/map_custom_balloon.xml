<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/map__test_bubble"
    android:padding="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bubble_btn_smp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오톡샘"
            android:textSize="12sp"
            android:layout_alignRight="@+id/bubble_text"
            android:layout_below="@+id/bubble_text"
            android:padding="10dp"/>
        <Button
            android:id="@+id/bubble_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bubble_btn_smp"
            android:layout_alignBottom="@+id/bubble_btn_smp"
            android:layout_alignRight="@+id/bubble_btn_smp"
            android:layout_alignLeft="@+id/bubble_btn_smp"
            android:text="카카오맵"
            android:textSize="12sp"/>

        <LinearLayout
            android:id="@+id/bubble_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Custom Marker"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="custom marker desc."
                android:textColor="#ff7f7f7f"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>