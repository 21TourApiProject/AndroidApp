<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/tppop_area"
    android:orientation="vertical"
    tools:context=".myPage.LogoutPopActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="29.5dp"
        android:text="로그아웃 하시겠습니까?"
        android:textColor="@color/white"
        android:fontFamily="@font/spoqahansansneomedium"
        android:textSize="12sp" />


    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="23.5dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="로그아웃"
        android:fontFamily="@font/spoqahansansneomedium"
        android:textSize="12sp"
        android:background="@drawable/round_btn"
        android:onClick="logout"/>

    <Button
        android:id="@+id/closeLogout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:text="닫기"
        android:fontFamily="@font/spoqahansansneomedium"
        android:textSize="12sp"
        android:background="@drawable/round_btn"
        android:onClick="closeLogout"/>

</LinearLayout>