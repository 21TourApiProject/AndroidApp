<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Touristspot_Activity">


    <Button
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_chevron_left_24" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/textView4"
        android:background="@drawable/ic_baseline_location_on_24" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_below="@id/textView4"
        android:layout_marginStart="40sp"
        app:srcCompat="@drawable/backgroundocean" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/button"
        android:text="관광지 이름"
        android:textSize="40sp"
        tools:layout_centerHorizontal="false" />

    <TextView
        android:id="@+id/Touristname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:text="관광지 이름" />

    <Button
        android:id="@+id/heart_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView"
        android:layout_marginStart="300dp"
        android:background="@drawable/heart__button" />

    <Button
        android:id="@+id/reviewmore_button"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="600dp"
        android:text="방문자 리뷰 더보기 >" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heart_button"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewmore_button"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_post2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_below="@id/heart_button"
        android:layout_marginStart="300dp"
        android:background="#ffffff"
        android:text="더 보기 >" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="리뷰를 작성해주세요" />

        <Button
            android:id="@+id/reviewbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="확인" />
    </LinearLayout>

</RelativeLayout>